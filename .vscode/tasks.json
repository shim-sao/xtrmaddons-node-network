{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "update",
      "type": "shell",
      "command": "npm update",
      "windows": {
        "command": "npm update"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "install",
      "type": "shell",
      "command": "npm install",
      "windows": {
        "command": "npm install"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "audit",
      "type": "shell",
      "command": "npm audit",
      "windows": {
        "command": "npm audit"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "audit fix",
      "type": "shell",
      "command": "npm audit fix",
      "windows": {
        "command": "npm audit fix"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$eslint-compact"
      ]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$eslint-compact"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "problemMatcher": [
        "$eslint-compact"
      ]
    }
  ]
}